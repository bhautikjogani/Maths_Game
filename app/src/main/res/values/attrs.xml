<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="OutlinedTextView">
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />

        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
        <!-- for AutoFit Text View -->
        <attr name="isEnableAutoFitText" format="boolean" />

    </declare-styleable>

    <declare-styleable name="MyImageView">
        <attr name="stringSrc" format="string" />

    </declare-styleable>


    <color name="shimmer_color">#99FFFFFF</color>
    <!--    <color name="shimmer_color">#a2878787</color>-->
    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference" />
        <attr name="shimmer_animation_duration" format="integer|reference" />
        <attr name="shimmer_auto_start" format="boolean|reference" />
        <attr name="shimmer_angle" format="integer|reference" />
        <attr name="shimmer_mask_width" format="float|reference" />
        <attr name="shimmer_gradient_center_color_width" format="float|reference" />
        <attr name="shimmer_reverse_animation" format="boolean|reference" />
    </declare-styleable>

    <dimen name="t_width">40dp</dimen>
    <dimen name="t_height">80dp</dimen>

    <dimen name="p_profileSize">31dp</dimen>
    <dimen name="p_profileRadius">4dp</dimen>

</resources>